<div class="container">

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>
  <div class="row">
    <table class="table">
      <tr>
        <td>アカウント名</td>
        <td><%= f.text_field :account_name, autofocus: true, autocomplete: "account_name" %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <td>生年月日</td>
        <td><%= f.date_field :birth_date, autofocus: true, autocomplete: "birth_date" %></td>
      </tr>

      <tr>
        <td>パスワード（６文字以上）</td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>

      <tr>
        <td>パスワード確認用</td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </table>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>
<h2>既に登録済みの方</h2>
  <div class="row">
    <div class="col">
      <p><%= link_to "こちら",new_customer_session_path %>からログインしてください。</p>
    </div>
  </div>

</div>
