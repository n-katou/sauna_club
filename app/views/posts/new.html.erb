<div class="container bg-light">
  <br>
  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<h1>新規投稿</h1>
  <%= form_with model: @post, url: posts_path ,method: :post do |f| %>
    <br><br>
    <div class="row">
      <div class="col-xl-2 col0"></div>
      <div class="col-xl-2 col-5">
        <h3>
          タイトル
        </h3>
      </div>
      <div class="col-xl-1 col-1"></div>
      <div class="col-xl-6 col-6 d-flex align-items-center">
        <%= f.text_field :title %>
      </div>
    </div>

    <br><br>
    <div class="row">
      <div class="col-xl-2 col0"></div>
      <div class="col-xl-2 col-5">
        <h3>
          投稿画像
        </h3>
      </div>
      <div class="col-xl-1 col-1"></div>
      <div class="col-xl-6 col-6 d-flex align-items-center">
        <%= f.file_field :post_image, accept: "image/*" %>
      </div>
    </div>

    <br><br>
    <div class="row">
      <div class="col-xl-2 col0"></div>
      <div class="col-xl-2 col-5">
        <h3>
          詳細
        </h3>
      </div>
      <div class="col-xl-1 col-1"></div>
      <div class="col-xl-6 col-6 d-flex align-items-center">
        <%= f.text_area :post_content %>
      </div>
    </div>

    <br><br>
    <div class="row">
      <div class="col-xl-2 col0"></div>
      <div class="col-xl-4 col-12 d-flex align-items-center">
        <h3>
          タグ(1つ以上の使用を推奨)
        </h3>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-xl-3 col-1"></div>
      <div class="col-xl-8 col-11">
        <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :tag_name do |b| %>
          <p><%= b.label { b.check_box + b.text } %></p>
        <% end %>
      </div>
    </div>

    <br><br>
    <div class="row">
      <div class="col-xl-5 col-4"></div>
      <div class="col-xl-2 col-2">
        <%= f.submit "投稿する" , class: "text-white bg-primary btn" %>
      </div>
    </div>
    <br><br><br><br><br>
  <% end %>
</div>