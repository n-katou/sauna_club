<div class="container">
<h3>新規投稿</h3>
  <div class="row text-center">
    <div class="col mx-auto" >
    <%= form_with model: @post, url: "/posts" ,method: :post do |f| %>
      <table class= "table table-borderless">
         <tr>
          <th>タイトル</th>
          <th><%= f.text_field :title %></th>
        </tr>
        <tr>
          <th>商品画像</th>
          <th><%= f.file_field :post_image, accept: "image/*" %></th>
        </tr>
        <tr>
          <th>詳細</th>
          <th><%= f.text_area :post_content %></th>
        </tr>
        <tr>
          <th>タグ</th>
          <th>
            <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :tag_name do |b| %>
              <%= b.label { b.check_box + b.text } %>
            <% end %>
          </th>
        </tr>
      </table>
      <%= f.submit "投稿" , class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>