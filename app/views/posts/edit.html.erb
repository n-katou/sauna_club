<div class="container">
<br><br>
<h1>投稿編集</h1>
  <%= form_with model: @post,url: post_path(@post.id) ,method: :patch do |f| %>
  <div class="row">
    <div class="col-2"></div>
    <div class="col-2">
      <h3>タイトル</h3>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <%= f.text_field :title %>
    </div>
  </div>

  
          <th>商品画像</th>
          <th><%= f.file_field :post_image, accept: "image/*" %></th>
 
    
          <th>詳細</th>
          <th><%= f.text_area :post_content %></th>
     
          <th>タグ</th>
          <th>
            <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :tag_name do |b| %>
              <%= b.label { b.check_box + b.text } %>
            <% end %>
          </th>
 
       <%= f.submit "変更を保存" , class: "btn btn-success" %>    <%= link_to "投稿を削除する", post_path(@post.id),method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn btn-danger" %>
    <% end %>
</div>