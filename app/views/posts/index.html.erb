<div class="container">
  <div class="row">
    <h1>投稿一覧</h1>
    <br><br><br>
  </div>
    <% @posts.each do |post| %>
    ____________________________________________________________________________________________________________________________________________
    <div class="row">
      <div class="col-2">
        <%= image_tag post.customer.profile_image,size: "100x100" %>
      </div>
      <div clss="col-4">
        <h4>タイトル   <%= link_to post.title,post_path(post.id) %></h4>
      </div>
    </div>

    <div class="row">
      <br>
      <div class="col-2">
        <%= post.customer.account_name %>
      </div>
      <div class="col-6">
        <% post.tags.each do |tag| %>
          <p><%= tag.tag_name %></p>
        <% end %>
      </div>
      <br><br>
    </div>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-2"><%= post.created_at.strftime('%Y%m/%d')%></div>
      <div class="col-2"><%= post.comments.count %>件</div>
      <div class="col-2"><%= post.favorites.count %>いいね</div>
    </div>

    ____________________________________________________________________________________________________________________________________________
    <br><br><br>
    <% end %>
    <%#= paginate posts %>
  <div class="row">
    <div class="col text-center">
      <%= link_to "新規投稿する",new_post_path,class: "btn btn-primary" %>
    </div>
  </div>
  <br><br><br><br><br>
</div>