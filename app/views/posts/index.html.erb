<div class="container bg-light">
  <div class="row">
    <h1>投稿一覧</h1>
  </div>
  <br><br>
    <% @posts.each do |post| %>

    <div class="border">
      <div class="row">
        <div class="col-2 d-flex align-items-center">
          <%= image_tag post.customer.profile_image,size: "100x100" %>
        </div>
        <div clss="col-4 d-flex align-items-center">
          <h4>タイトル   <%= link_to post.title,post_path(post.id) %></h4>
        </div>
      </div>

      <div class="row">
        <br>
         <div class="col-2">
          <%= link_to customer_path(post.customer.id) do %>
            <%= post.customer.account_name %>
          <% end %>
        </div>
        <div class="col-6 ">
          <h4>タグ</h4>
          <% post.tags.each do |tag| %>
            <p class="d-flex align-items-center"><%= tag.tag_name %></p>
          <% end %>
        </div>
        <br><br>
      </div>

      <div class="row">
        <div class="col-6"></div>
        <div class="col-2">投稿日 <i class="fa-solid fa-calendar"></i> <%= post.created_at.strftime('%Y/%m/%d')%></div>
        <div class="col-2">コメント数 <i class="fa-solid fa-comments"></i> <%= post.comments.count %>件</div>
        <div class="col-2">いいね数 <i class="fa-solid fa-heart"></i><%= post.favorites.count %>いいね</div>
      </div>
    </div>
    <br><br>
    <% end %>
    <div class="row">
      <div class="col text-center"><%= paginate @posts %></div>
    </div>
  <br><br>
  <div class="row">
    <div class="col text-center">
      <%= link_to "新規投稿する",new_post_path,class: "btn btn-info" %>
    </div>
  </div>
  <br><br><br><br><br>
</div>