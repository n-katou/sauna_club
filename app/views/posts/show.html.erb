<div class="container bg-light">
<br><br>
  <div class="border">
    <br>
    <div class ="row">
      <div class="col-3"></div>
      <div class="col-6">
        <div class="border rounded">
          <h4 class="text-center">タイトル</h4>
          <p class="text-center"><strong><%= @post.title %></strong></p>
        </div>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6 text-center">
        <% if @post.post_image.attached? %>
          <%= image_tag @post.post_image, size: "150x150" %>
        <% end %>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <div class="border rounded">
          <h4 class="text-center">本文</h4>
          <br><br>
          <strong><%= @post.post_content %></strong>
        </div>
      </div>
    </div>

    <br><br>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <div class="border rounded">
          <h4 class="text-center">タグ</h4>
          <% @post.tags.each do |tag| %>
            <strong><%= tag.tag_name %></strong>
          <% end %>
        </div>
      </div>
    </div>

    <br><br>
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6 text-center">
        <% unless @post.customer == current_customer %>
          <% if @post.favorited_by?(current_customer) %>
            <h4>
              <%= link_to post_favorites_path(@post), method: :delete do %>
                <i class="fa-solid fa-heart-crack"></i>いいね解除
              <% end %>
            </h4>
          <% else %>
            <h4>
              <%= link_to post_favorites_path(@post), method: :post do %>
                <i class="fa-solid fa-heart"></i>いいねする
              <% end %>
            </h4>
          <% end %>
        <% end %>
      </div>
    </div>

    <br><br>
    <div class="row">
      <div class="col-10"></div>
      <div class="col-2">
        <% if @post.customer == current_customer %>
          <%= link_to "編集する", edit_post_path(@post.id), class: "btn btn-success" %>
        <% end %>
      </div>
    </div>

    <br><br>
    <div class="border rounded">
      <br>
      <div class="row">
        <div class="col-3"></div>
        <div class="col-4">
          <p>投稿者</p>
          <%= link_to customer_path(@post.customer.id) do %>
            <%= image_tag @post.customer.get_profile_image(100,100) %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-3"></div>
        <div class="col-2">
          <%= link_to customer_path(@post.customer.id) do %>
            <%= @post.customer.account_name %>
          <% end %>
        </div>
        <div class="col-2"></div>
        <div class="col">
          <p>
            投稿日 <i class="fa-solid fa-calendar"></i><%= @post.created_at.strftime('%Y/%m/%d')%> | コメント数 <i class="fa-solid fa-comments"></i><%= @post.comments.count %>件 | いいね数 <i class="fa-solid fa-heart"></i> <%= @post.favorites.count %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <br>
  <div class ="row">
    <h3><%= @post.comments.count %>件コメント</h3>
  </div>
  <br>

    <% @comments.each do |comment| %>
    <div class="border rounded">
      <br>
      <div class="row">
        <div class="col-1"></div>
        <div class="col-2">
          <p>コメント投稿者</p>
          <%= image_tag comment.customer.get_profile_image(100,100) %>
        </div>
        <div class="col-1"></div>
        <div class="col-4 d-flex align-items-center">
          <%= comment.comment_content %>
        </div>
        <div class="col-3">
          投稿日  <i class="fa-solid fa-calendar"></i> <%= comment.created_at.strftime('%Y%m/%d') %>
        </div>
      </div>

      <div class="row">
        <div class="col-1"></div>
        <div class="col-3">
          <%= link_to customer_path(comment.customer.id) do %>
            <%= comment.customer.account_name %>
          <% end %>
        </div>
        <div class="col-4"></div>
        <div class="col-2">
          <% if comment.customer == current_customer %>
            <p><%= link_to "編集する", edit_post_comment_path(comment.id),class: "btn btn-success"%></p>
          <% end %>
        </div>
      </div>
      <br>
    </div>
    <% end %>

    <div class="row">
      <div class="col text-center"><%= paginate @comments %></div>
    </div>

  <div class="row">
    <h3>コメントする</h3>
  </div>
  <br><br>

<%= form_with model: [@post,@comment] do |f| %>
  <div class= "row">
    <div class="col-4"></div>
    <div class="col-6">
      <h3><%= f.text_area :comment_content,rows: "5", placeholder: "コメントをここに" %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-6"></div>
    <div class="col-3">
      <%= f.submit "投稿する",class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
  <br><br><br><br><br>

</div>