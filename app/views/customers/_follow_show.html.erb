<div>
    <% if current_customer != customer %>
      <% if current_customer.following?(customer) %>
        <%= link_to "フォローをはずす", customer_relationships_path(customer_id: customer.id), method: :delete, remote: true, class: "btn btn-danger" %>
      <% else %>
        <%= link_to "フォローする", customer_relationships_path(customer_id: customer.id), method: :post, remote: true, class: "text-white bg-primary btn" %>
      <% end %>
    <% end %>
  </div>