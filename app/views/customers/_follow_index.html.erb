<%= render "customers/follow_count", customer: customer %>
<br>
<div class="row">
  <div class="col-xl-3 col-1"></div>
  <div class="col-xl-2 col-4 d-flex align-items-center">
    <% if current_customer != customer %>
      <% if current_customer.following?(customer) %>
        <%= link_to "フォローをはずす", customer_relationships_path(customer.id), method: :delete, remote: true, class: "btn btn-danger" %>
      <% else %>
        <%= link_to "フォローする", customer_relationships_path(customer.id), method: :post, remote: true, class: "text-white bg-primary btn"%>
      <% end %>
    <% end %>
  </div>
  <div class="col-xl0 col0"></div>
  <div class="col-xl-4 col-4 d-flex align-items-center">
    <% if current_customer != customer %>
      <%= link_to 'チャットをする', rooms_path(customer_id: customer), method: :post, class: "text-white bg-info btn" %>
    <% end %>
  </div>
</div>