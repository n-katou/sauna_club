<div class="container bg-light">
  <div class="row">
    <div class="mx-auto">
      <h1>会員情報編集</h1>
    </div>
  </div>
  <br><br><br>
  <%= form_with model: @customer,url: customer_path(current_customer), method: :patch do |f| %>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-3">
        <h3>アカウント画像</h3>
      </div>
      <div class="col-6 d-flex align-items-center">
        <%= f.file_field :profile_image %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-3">
        <h3>アカウント名</h3>
      </div>
      <div class="col-6 d-flex align-items-center">
        <%= f.text_field :account_name %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-3">
        <h3>メールアドレス</h3>
      </div>
      <div class="col-6 d-flex align-items-center">
        <%= f.text_field :email %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-3">
        <h3>生年月日</h3>
      </div>
      <div class="col-6 d-flex align-items-center">
        <%= f.date_field :birth_date %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-3">
        <h3>自己紹介</h3>
      </div>
      <div class="col-6 d-flex align-items-center">
        <%= f.text_area :introduction %>
      </div>
    </div>
    <br><br><br><br>

    <div class="row">
      <div class="col-4"></div>
      <div class="col-2">
        <%= f.submit "編集内容を保存",class: "btn btn-info" %>
      </div>
      <div class="col-1"></div>
      <div class="col-2">
        <%= link_to "退会する",unsubscribe_path(current_customer),class: "btn btn-danger" %>
      </div>
    </div>
    <br><br><br><br><br>
  <% end %>
</div>