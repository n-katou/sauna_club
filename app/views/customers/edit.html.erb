<div class="container bg-light">
  <br>
  <% if @customer.errors.any? %>
  <div class = "error">
     <ul>
        <% @customer.errors.full_messages.each do |message| %>
           <li><%= message %></li>
	    <% end %>
     </ul>
  </div>
<% end %>
  <div class="row">
    <div class="mx-auto">
      <h1>会員情報編集</h1>
    </div>
  </div>
  <br><br><br>
  <%= form_with model: @customer,url: customer_path(current_customer), method: :patch do |f| %>
    <div class="row">
      <div class="col-xl-3 col0"></div>
      <div class="col-xl-3 col-6">
        <h3>アカウント画像</h3>
      </div>
      <div class="col-xl-6 col-5 d-flex align-items-center">
        <%= f.file_field :profile_image %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-xl-3 col0"></div>
      <div class="col-xl-3 col-6">
        <h3>アカウント名</h3>
      </div>
      <div class="col-6 d-flex align-items-center">
        <%= f.text_field :account_name %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-xl-3 col-0"></div>
      <div class="col-xl-3 col-6">
        <h3>メールアドレス</h3>
      </div>
      <div class="col-xl-6 col-6 d-flex align-items-center">
        <%= f.text_field :email %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-xl-3 col0"></div>
      <div class="col-xl-3 col-6">
        <h3>生年月日</h3>
      </div>
      <div class="col-xl-3 col-6 d-flex align-items-center">
        <%= f.date_field :birth_date %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-xl-3 col0"></div>
      <div class="col-xl-3 col-6">
        <h3>自己紹介</h3>
      </div>
      <div class="col-xl-6 col-6 d-flex align-items-center">
        <%= f.text_area :introduction %>
      </div>
    </div>
    <br><br><br><br>

    <div class="row">
      <div class="col-xl-4 col-1"></div>
      <div class="col-xl-2 col-4">
        <%= f.submit "編集内容を保存",class: "text-white bg-primary btn" %>
      </div>
      <div class="col-xl-1 col-2"></div>
      <div class="col-xl-2 col-4">
        <%= link_to "退会する",unsubscribe_path(current_customer),class: "btn btn-danger" %>
      </div>
    </div>
    <br><br><br><br><br>
  <% end %>
</div>