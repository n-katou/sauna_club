<div class="row">
    <div class="col-xl-3 col0"></div>
    <div class= "col-xl-3 col-8">
      <h3>アカウント画像</h3>
    </div>
    <div class="col-xl-6 col-4 d-flex align-items-center">
      <%= image_tag customer.get_profile_image(100,100)%>
    </div>
  </div>
  <br><br>

  <div class="row">
    <div class="col-xl-3 col0"></div>
    <div class="col-xl-3 col-7">
      <h3>アカウント名</h3>
    </div>
    <div class="col-xl-4 col-5 d-flex align-items-center">
      <%= customer.account_name %>
    </div>
  </div>
  <br><br>

  <div class="row">
    <div class="col-xl-3 col0"></div>
    <div class="col-xl-3 col-6">
      <h3>生年月日</h3>
    </div>
    <div class="col-xl-3 col-6 d-flex align-items-center">
      <%= customer.birth_date %>
    </div>
    <div class="col-4"></div>
  </div>
  <br><br>

  <div class="row">
    <div class="col-xl-3 col0"></div>
    <div class="col-xl-3 col-6">
      <h3>自己紹介</h3>
    </div>
    <div class="col-xl-6 col-6 d-flex align-items-center">
      <%= customer.introduction %>
    </div>
  </div>
  <br><br>
