<div class="container">
  <% if @chat.errors.any? %>
    <%= @chat.errors.count %>件のエラーが発生しました
    <ul>
      <% @chat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h1>チャット編集</h1>
  <br><br>
  <%= form_with model: @chat ,url: chat_path(@chat.id),method: :patch do |f| %>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-2">
        <h3>チャット内容</h3>
      </div>
      <div class="col-1"></div>
      <div class="col-6 d-flex align-items-center">
        <%= f.text_field :message %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="col-4"></div>
      <div class="col-2">
        <%= link_to "削除する",chat_path(@chat.id),method: :delete, class: "btn btn-danger","data-confirm" => "本当に削除しますか？" %>
      </div>

      <div class="col-2">
        <%= f.submit "変更を保存" ,class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  <br><br><br><br><br>

</div>