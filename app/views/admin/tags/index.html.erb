<div class="container bg-light">
  <br><br>
  <h1>タグ一覧・追加</h1>
  <br><br>

  <%= form_with model: @tag,url: admin_tags_path,method: :post do |f| %>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-2 d-flex align-items-center">
        <h3>タグ名</h3>
      </div>
      <div class="col-1"></div>
      <div class="col-3 d-flex align-items-center">
        <%= f.text_field :tag_name %>
      </div>
      <div class="col-2 d-flex align-items-center">
        <%= f.submit "新規登録" ,class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  <br><br><br><br><br>

  <% @tags.each do |tag| %>
    <div class="border">
      <br>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-3 d-flex align-items-center">
          <%= tag.tag_name %>
        </div>
        <div class="col-1"></div>
        <div class="col-1 d-flex align-items-center">
          <%= link_to "編集する", edit_admin_tag_path(tag.id),class: "btn btn-success"  %>
        </div>
      </div>
      <br>
    </div>
    <br><br>
  <% end %>

  <div class="row">
    <div class="col text-center"><%= paginate @tags %></div>
  </div>

<br><br><br><br><br>
</div>
