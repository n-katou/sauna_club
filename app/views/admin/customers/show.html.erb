<br><br>
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>会員情報</h1>
    </div>
  </div>

  <div class="row">
    <div class= "col-3"></div>
    <div class= "col-4 d-flex align-items-center">
      <h3>アカウント画像</h3>
    </div>
    <div class="col-4 d-flex align-items-center">
      <%= image_tag @customer.get_profile_image(100,100)%>
    </div>
  </div>
  <br><br>

  <div class="row">
    <div class= "col-3"></div>
    <div class= "col-4 d-flex align-items-center">
      <h3>会員ID</h3>
    </div>
    <div class="col-4 d-flex align-items-center">
      <%= @customer.id%>
    </div>
  </div>
  <br><br>

  <div class="row">
    <div class= "col-3"></div>
    <div class="col-4 d-flex align-items-center">
      <h3 class="d-flex align-items-center">アカウント名</h3>
    </div>
    <div class="col-4 d-flex align-items-center">
      <%= @customer.account_name %>
    </div>
    <div class="col-4"></div>
  </div>
  <br><br>

  <div class="row">
    <div class= "col-3"></div>
    <div class="col-4 d-flex align-items-center">
      <h3>メールアドレス</h3>
    </div>
    <div class="col-4 d-flex align-items-center">
      <%= @customer.email %>
    </div>
  </div>
  <br><br>

  <div class="row">
    <div class= "col-3"></div>
    <div class="col-4 d-flex align-items-center">
      <h3>生年月日</h3>
    </div>
    <div class="col-4 d-flex align-items-center">
      <%= @customer.birth_date %>
    </div>
    <div class="col-4"></div>
  </div>
  <br><br>

  <div class="row">
    <div class= "col-3"></div>
    <div class="col-4 d-flex align-items-center">
      <h3>自己紹介</h3>
    </div>
    <div class="col-4 d-flex align-items-center">
      <%= @customer.introduction %>
    </div>
  </div>
  <br><br>

  <div class="row">
    <div class= "col-3"></div>
    <div class="col-4 d-flex align-items-center">
      <h3>ステータス</h3>
    </div>
    <div class="col-4 d-flex align-items-center">
      <% if @customer.is_active == true %>
        <p>有効</p>
      <% elsif @customer.is_active == false %>
        <p>退会</p>
      <% end %>
    </div>
  </div>
  <br><br>

  <div class="row">
    <div class="mx-auto">
      <h1>
        <%= link_to "編集する", edit_admin_customer_path(@customer.id),class: "btn btn-success" %>
      </h1>
    </div>
  </div>
  <br><br>

  <div class="row">
    <h1>自分の投稿一覧</h1>
  </div>
  <br><br>
  <% @posts.each do |post| %>
  <div class="border">
    <div class="row">
      <div class="col-2">
        <%= image_tag post.customer.get_profile_image(100,100) %>
      </div>
      <div class="col-4">
        <h4>タイトル     <%= link_to post.title,admin_post_path(post.id) %></h4>
      </div>
    </div>
    <div class="row">
      <br>
      <div class="col-2">
        <%= post.customer.account_name %>
      </div>
      <div class="col-6">
        <% post.tags.each do |tag| %>
          <p><%= tag.tag_name %></p>
        <% end %>
      </div>
      <br><br>
    </div>
    <div class="row">
      <div class="col-2"></div>
      <div class="col-2"><%= post.created_at.strftime('%Y/%m/%d') %> </div>
      <div class="col-2"><%= post.comments.count %>コメント </div>
      <div class="col-2"><%= post.favorites.count %>いいね</div>
    </div>
  </div>
  <br><br>
  <% end %>
    <div class="row">
        <div class="col text-center"><%= paginate @posts %></div>
      </div>
    <br><br><br><br><br>
</div>