<div class="container bg-light">
  <br><br>
    <div class="row">
      <div class="mx-auto">
        <h1>会員情報編集</h1>
      </div>
    </div>

  <%= form_with model: @customer,url: admin_customer_path(@customer.id), method: :patch do |f| %>
    <div class="row">
      <div class= "col-3"></div>
      <div class= "col-4 d-flex align-items-center">
        <h3>アカウント画像</h3>
      </div>
      <div class="col-4 d-flex align-items-center">
        <%= f.file_field :profile_image %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class= "col-3"></div>
      <div class="col-4 d-flex align-items-center">
        <h3 class="d-flex align-items-center">アカウント名</h3>
      </div>
      <div class="col-4 d-flex align-items-center">
        <%= f.text_field :account_name %>
      </div>
      <div class="col-4"></div>
    </div>
    <br><br>

    <div class="row">
      <div class= "col-3"></div>
      <div class="col-4 d-flex align-items-center">
        <h3>メールアドレス</h3>
      </div>
      <div class="col-4 d-flex align-items-center">
        <%= f.text_field :email %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class= "col-3"></div>
      <div class="col-4 d-flex align-items-center">
        <h3>生年月日</h3>
      </div>
      <div class="col-4 d-flex align-items-center">
        <%= f.date_field :birth_date %>
      </div>
      <div class="col-4"></div>
    </div>
    <br><br>

    <div class="row">
      <div class= "col-3"></div>
      <div class="col-4 d-flex align-items-center">
        <h3>自己紹介</h3>
      </div>
      <div class="col-4 d-flex align-items-center">
        <%= f.text_area :introduction %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class= "col-3"></div>
      <div class="col-4 d-flex align-items-center">
        <h3>ステータス</h3>
      </div>
      <div class="col-4 d-flex align-items-center">
        <%= f.radio_button :is_active,"true" %>
        <%= f.label :is_active,"有効" %>
        <%= f.radio_button :is_active,"false" %>
        <%= f.label :is_active,"退会" %>
      </div>
    </div>
    <br><br>

    <div class="row">
      <div class="mx-auto">
         <%= f.submit "編集内容を保存",class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <br><br><br><br><br>
</div>
