<div class="container">
  <h2>管理者ログイン</h2><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-2">
          <div class="field">
            <%= f.label :email, "メールアドレス" %> </br></br>
            <%= f.label :password, "パスワード" %>
          </div>
      </div>
      <div class="col-5">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %> </br></br>
          <%= f.password_field :password, autocomplete: "current-password" %> </br></br>
        </div>
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      </div>
    </div>
    <% end %>
      <%= render "admin/shared/links" %>
</div>