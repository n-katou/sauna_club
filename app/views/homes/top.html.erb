<div class="container bg-light">
  <br>
  <div class="row">
    <div class="mx-auto">
      <br><br><br><br>
      <h2 class="text-primary">
        サウナ倶楽部へようこそ
      </h2>
      <br><br><br><br>
    </div>
  </div>
  <br><br>
  <% @posts.each do |post| %>
    <div class="border">
      <div class="row">
        <div class="col-xl-2 col-4 d-flex align-items-center">
          <%= image_tag post.customer.profile_image,size: "100x100" %>
        </div>
        <div clss="col-xl-4 col-8 d-flex align-items-center">
          <h4>タイトル   <%= post.title %></h4>
        </div>
      </div>
      <div class="row">
        <br>
         <div class="col-xl-2 col-4 d-flex align-items-center">
          <%= post.customer.account_name %>
        </div>
        <div class="col-xl-4 col-8">
          <h4>タグ</h4>
          <% post.tags.each do |tag| %>
            <p class="d-flex align-items-center"><%= tag.tag_name %></p>
          <% end %>
        </div>
        <br><br>
      </div>
      <div class="row">
        <div class="col-xl-6 col0"></div>
        <div class="col-xl-2 col-12">投稿日 <i class="fa-solid fa-calendar"></i> <%= post.created_at.strftime("%Y/%m/%d %H:%M")%></div>
        <div class="col-xl-2 col-12">コメント数 <i class="fa-solid fa-comments"></i> <%= post.comments.count %>件</div>
        <div class="col-xl-2 col-12">いいね数 <i class="fa-solid fa-heart"></i><%= post.favorites.count %>いいね</div>
      </div>
    </div>
    <br><br>
  <% end %>
</div>