<div class="container bg-light">
  <br><br>
  <h1>タグ一覧 </h1>
  <br><br>

  <% @tags.each do |tag| %>
    <div class="border">
      <br>
      <div class="row">
        <div class="col-xl-2 col-1"></div>
        <div class="col-xl-3 col-10 d-flex align-items-center">
          <%= tag.tag_name %>
        </div>
        <div class="col-xl-1 col-1"></div>
      </div>
      <br>
    </div>
    <br><br>
  <% end %>

  <div class="row">
    <div class="mx-auto"><%= paginate @tags %></div>
  </div>

<br><br><br><br><br>
</div>
